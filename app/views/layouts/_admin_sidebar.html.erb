<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left info">
        <p><%= t "views.layout.admin.sidebar_name" %></p>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> <%= t "views.layout.admin.sidebar_status" %></a>
      </div>
    </div>
    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header"><%= t "views.layout.admin.sidebar_menu_title" %></li>
    </ul><!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
