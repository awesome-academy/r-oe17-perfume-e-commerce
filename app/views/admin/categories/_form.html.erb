<%= form_for(@category, url: yield(:path), html: {class: "form-horizontal"}) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :category_name, class: "col-xs-12 col-sm-3 col-md-2 control-label" %>
    <div class="col-xs-12 col-sm-4 col-md-6">
      <%= f.text_field :category_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-xs-12 col-sm-3 col-md-2 control-label" %>
    <div class="col-xs-12 col-sm-4 col-md-6">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
