<div class="panel panel-default">
  <div class="panel-heading">
    <%= t "views.admin.category.new.p_title"%>
  </div>
  <div class="panel-body">
    <%= form_for(@category, url: admin_categories_path, html: {class: "form-horizontal"}) do |f| %>
      <div class="form-group">
        <%= f.label :category_name, class: "col-xs-12 col-sm-3 col-md-2 control-label" %>
        <div class="col-xs-12 col-sm-4 col-md-6">
          <%= f.text_field :category_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class: "col-xs-12 col-sm-3 col-md-2 control-label" %>
        <div class="col-xs-12 col-sm-4 col-md-6">
          <%= f.text_field :description, class: "form-control" %>
        </div>
      </div>
      <%= f.submit t("views.admin.category.new.b_submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
