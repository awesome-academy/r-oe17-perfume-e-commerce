<h1 class="text-center"><%= t("views.layout.client.nav_login")%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with scope: :session, url: login_sessions_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
    <p><%= t "views.layout.client.singup.new_user" %> <%= link_to t("views.layout.client.singup.sign_up_now"), signup_users_path %></p>
  </div>
</div>
