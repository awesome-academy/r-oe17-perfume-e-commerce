<% if !@order_detail.nil? && @order_detail.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @order_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% if @order_details.size == 0 %>
  <p class="text-center">
    <%= t ".warning1" %>
    <%= link_to "go back", root_path %>
    <%= t ".warning2" %>
  </p>
<% else %>
  <div id="shopping-cart">
    <%= render "cart" %>
  </div>
<% end %>
